<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My CRUD in NodeJS</title>
  <style>
    body {background-color: aquamarine;}
    bodY{text-align: center}
    h1 {color: brown;}
    table{background-color:rgb(248, 248, 248) }
    table{text-align:center; }
    
  </style>
</head>
<body>
    
        <img src="https://www.elmachipsburgerking.com.br/img/step-1.png" alt="https://www.elmachipsburgerking.com.br">
      
<center><h2>Registros</h2>
  <table border="1">
    <thead>
        <tr>
            <td bgcolor="#808080" >Nome</td>
            <td bgcolor="#808080" >Sobrenome</td>
            <td bgcolor="#808080" >Endereço</td>
            <td bgcolor="#808080" >Telefone</td>
            <td bgcolor="#808080" >Genero</td>
            <td bgcolor="#808080" >Email</td>
            <td bgcolor="#808080" >Data de Nasceimento</td>
            <td bgcolor="#808080" >Principais Interesses</td>
            <td bgcolor="#808080" >Salgadinho</td>
            <td bgcolor="#808080" >Justificativa</td>
            <td bgcolor="#808080" >Ações</td>
            
        </tr>
    </thead>
    <tbody>
    <% data.forEach(function(details) { %>
        <tr>
            <td><%= details.name %></td>
            <td><%= details.surname %></td>
            <td><%= details.endere %></td>
            <td><%= details.tel %></td>
            <td><%= details.gender %></td>
            <td><%= details.email %></td>
            <td><%= details.aniversario %></td>
            <td><%= details.op1 %></td>
            <td><%= details.salgadinho %></td>
            <td><%= details.texto %></td>
            
            <td><a href="/edit/<%= details._id %>">Editar</a> - <a href="/delete/<%= details._id %>">Deletar</a></td>
        </tr>
        <% }) %>
    </tbody>
  </table></center>
  <center></center><br><br><button><a href="/">Novo</a></button></center>
</body>
</html>